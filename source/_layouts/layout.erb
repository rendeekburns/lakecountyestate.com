<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Middleman is Loaded" %></title>
    
    <%= stylesheet_link_tag "normalize", "all" %>
  </head>
  
  <body class="<%= page_classes %>">

    <header class="site-header">
      <div class="container">
        <%= image_tag lorem.image('150x150'), class: 'profile-img' %>

        <nav class="site-nav" role="navigation">
          <div class="nav-links">
            <%= link_to 'Home', '/', class: 'nav-right' %>
            <%= link_to 'Docs', '/docs/', class: 'nav-right' %>
            <div class="mobile-menu"><i class="icon icon-reorder"></i></div>
          </div>
        </nav>
      </div>
    </header>


    <main class="site-main">
      <%= yield %>
    </main>

    <footer class="site-footer">
      <div class="container">
        
      </div>
    </footer>

    <%= javascript_include_tag  "all" %>
    <%= yield_content :js %>
  </body>
</html>
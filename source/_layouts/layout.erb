<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible"><!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta name="viewport" content="width=device-width">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Middleman is Loaded" %></title>
    
    <%= stylesheet_link_tag "normalize", "all" %>
    <%= yield_content :css %>
  </head>
  
  <body class="<%= page_classes %>">

    <header class="site-header">
      <div class="container">
        <nav class="site-nav" role="navigation">
          <div class="nav-links">
            <%= link_to 'property listings', '/listings/', class: 'nav-right' %>
            <%= link_to 'explore lake county', '/explore/', class: 'nav-right' %>
            <%= link_to 'about us', '/about/', class: 'nav-right' %>
            <%= link_to 'home', '/', class: 'nav-right' %>
            <div class="mobile-menu"><i class="icon icon-reorder"></i></div>
          </div>
        </nav>
      </div>
    </header>

    <main class="site-main">
      <%= yield %>
    </main>

    <footer class="site-footer">
      <div class="container">
        <%= link_to 'Documentation', '/docs/' %> | 16360 Hwy 175. Cobb, CA 95426 | (707) 928-6900
      </div>
    </footer>

    <%= javascript_include_tag  "all" %>
    <%= yield_content :js %>
  </body>
</html>